<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBalloonCardPreviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/card"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblBalloonCardPreviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previews"
        android:textAppearance="@style/CardTitle" />

    <View
        android:id="@+id/barBalloonCardPreviews0"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/stroke" />

    <GridView
        android:id="@+id/gvBallooCardPreviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </GridView>

</LinearLayout>
