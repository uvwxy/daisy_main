<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBalloonCardStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/card"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblBalloonCardStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textAppearance="@style/CardTitle" />

    <View
        android:id="@+id/barBalloonCardStatus0"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/stroke" />

    <Button
        android:id="@+id/btnBalloonCardStatusConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect" />

    <Button
        android:id="@+id/btnBalloonCardStatusClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close" />

    <TextView
        android:id="@+id/tvBalloonCardStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>